%p#notice= notice

- @directions.each do |d|
  = link_to d.to_s.humanize, [ @dungeon_instance, { direction: d} ], { method: :patch }

%hr

#top-arrow-div
  <img src="data:image/svg+xml;utf8;base64," />

#left-arrow-div
  - if @directions.include?( :left )
    = link_to [ @dungeon_instance, { direction: :left } ], { method: :patch } do
      <img class='direction-arrow' src="data:image/svg+xml;utf8;base64," />

#current_room_div
  = image_tag( 'current_room.jpg', class: :current_room )
